{
  "name": "@zambezi/ez-build",
  "main": "lib/ez-build.js",
  "bin": {
    "ez-build": "bin/ez-build.js"
  },
  "version": "0.4.3-tests.1",
  "description": "The Zambezi build process",
  "devDependencies": {
    "babel-cli": "^6.5.0",
    "babel-plugin-transform-async-functions": "^6.8.0",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.5.0",
    "babel-plugin-transform-regenerator": "^6.9.0",
    "babel-register": "6.11.6",
    "bats": "0.4.2",
    "depcheck": "0.6.3",
    "tape": "4.6.0",
    "tape-async": "2.1.1"
  },
  "dependencies": {
    "ansicolors": "0.3.2",
    "babel-core": "^6.5.0",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-plugin-transform-es2015-modules-umd": "^6.5.0",
    "babel-polyfill": "^6.5.0",
    "babel-preset-es2015": "^6.5.0",
    "bunyan": "1.6.0",
    "chokidar": "1.4.2",
    "commander": "2.9.0",
    "funkis": "0.2.0",
    "glob": "6.0.4",
    "output-file": "1.1.1",
    "pkginfo": "0.3.1",
    "postcss": "^5.0.16",
    "postcss-cssnext": "^2.4.0",
    "postcss-import": "^8.0.2",
    "postcss-url": "^5.1.1",
    "read-package-json": "2.0.3",
    "source-map-support": "0.4.0",
    "strip-ansi": "3.0.0",
    "thenify": "3.2.0",
    "window-size": "0.2.0"
  },
  "scripts": {
    "dev": "npm run build -- --watch",
    "build": "babel src -d lib --source-maps",
    "depcheck": "depcheck . --ignores-dirs=lib",
    "prepublish": "npm run depcheck && npm run build && npm run test",
    "test": "npm run test:unit && npm run test:cli",
    "test:unit": "tape -r babel-register -r babel-polyfill -r source-map-support/register test/unit/**/*.test.js",
    "test:cli": "bats test/cli/**/*.bats"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git@github.com:zambezi/ez-build.git"
  },
  "engines": {
    "node": ">=4"
  }
}
